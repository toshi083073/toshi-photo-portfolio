---
import { getPhotoBySlug } from "../../lib/data";

const { slug } = Astro.params;
const photo = await getPhotoBySlug(slug!);
if (!photo) throw new Error("Photo not found: " + slug);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{photo.title} — Toshi Kuramochi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial;
        margin: 0;
        padding: 2rem;
        line-height: 1.6;
        background: #fafafa;
      }
      .container {
        max-width: 920px;
        margin: 0 auto;
      }
      img {
        width: 100%;
        height: auto;
        border-radius: 12px;
        display: block;
      }
      .small {
        color: #666;
      }
      a {
        text-decoration: none;
        color: #06c;
      }
      .exif {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 8px;
        margin-top: 8px;
        color: #444;
      }
      header a {
        margin-right: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/">← Home</a>
      </header>

      <h1>{photo.title}</h1>
      <p class="small">{photo.date}</p>
      <img src={photo.image} alt={photo.title} loading="eager" />
      {photo.caption && <p>{photo.caption}</p>}

      {photo.exif && (
        <>
          <h3>Exif</h3>
          <div class="exif">
            {photo.exif.make && <div>Make: {photo.exif.make}</div>}
            {photo.exif.model && <div>Model: {photo.exif.model}</div>}
            {photo.exif.fNumber && <div>F-Number: f/{photo.exif.fNumber}</div>}
            {photo.exif.focalLength && <div>Focal: {photo.exif.focalLength}</div>}
            {photo.exif.iso && <div>ISO: {photo.exif.iso}</div>}
            {photo.exif.exposureTime && (
              <div>Shutter: {photo.exif.exposureTime}s</div>
            )}
          </div>
        </>
      )}
    </div>
  </body>
</html>
