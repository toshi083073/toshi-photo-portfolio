{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "types": ["astro/client", "node"],
    "jsx": "react-jsx",
    "allowJs": true,

    /* ✅ JSONインポート対応 */
    "resolveJsonModule": true,

    /* ✅ import で .ts / .astro / .json 拡張子省略OK */
    "allowImportingTsExtensions": false,

    /* ✅ ECMAScriptモジュール互換（Astroに最適） */
    "esModuleInterop": true,
    "moduleDetection": "force"
  },

  /* ✅ Astroプロジェクトで必要な型解決範囲 */
  "include": [
    ".astro/types.d.ts",
    "src",
    "src/env.d.ts"
  ],

  "exclude": ["dist"]
}
