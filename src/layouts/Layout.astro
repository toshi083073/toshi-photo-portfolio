---
const title = Astro.props.title || "Toshi Kuramochi Photography";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
        <!-- ✅ OGP & SEO -->
    <meta name="description" content="Tokyo-based photographer capturing street, light, and emotion — Toshi Kuramochi Photography Portfolio.">
    <meta name="keywords" content="Toshi Kuramochi, Tokyo Photography, Street Photo, Japan Photographer, Visual Stories">
    <meta name="author" content="Toshi Kuramochi">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Toshi Kuramochi — Visual Stories">
    <meta property="og:description" content="Street photography, light, and moments from Tokyo.">
    <meta property="og:url" content="https://toshi083073.github.io/toshi-photo-portfolio/">
    <meta property="og:image" content="https://toshi083073.github.io/toshi-photo-portfolio/photos/_DSC02094_s%202.jpg">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Toshi Kuramochi — Visual Stories">
    <meta name="twitter:description" content="Street photography and visual storytelling from Tokyo.">
    <meta name="twitter:image" content="https://toshi083073.github.io/toshi-photo-portfolio/photos/_DSC02094_s%202.jpg">


    <!-- ✅ Google Fonts: Inter + Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Noto+Sans+JP:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --font-sans: "Inter", "Noto Sans JP", system-ui, -apple-system, sans-serif;
        --bg: #111;
        --text: #ddd;
        --text-dim: #999;
        --accent: #fff;
      }

      html, body {
        font-family: var(--font-sans);
        margin: 0;
        padding: 0;
        color: var(--text);
        background: var(--bg);
        line-height: 1.7;
        letter-spacing: 0.02em;
        -webkit-font-smoothing: antialiased;
      }

      h1, h2, h3 {
        font-weight: 600;
        letter-spacing: 0.04em;
        color: var(--accent);
        margin-top: 0;
        margin-bottom: 1rem;
      }

      a {
        text-decoration: none;
        color: inherit;
        transition: opacity .2s ease;
      }

      a:hover {
        opacity: 0.7;
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
      }

      .nav a {
        color: var(--text-dim);
        font-size: 0.95rem;
        margin-right: 1rem;
      }

      footer {
        color: var(--text-dim);
        font-size: 0.85rem;
        margin-top: 4rem;
        text-align: center;
      }
    </style>

     <!-- サイトタイトルやOGタグなどがあればここに -->

  <!-- ✅ Google Analytics (GA4) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-1D4S1MCMQP"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-1D4S1MCMQP');
  </script>

  </head>

  <body>
    <div class="container">
      <slot />
      <footer>© {new Date().getFullYear()} Toshi Kuramochi · Built with Astro</footer>
    </div>

<script>
  // 汎用クリックイベントの追跡
  document.addEventListener("click", function (e) {
    const target = e.target.closest("a, button, img, video, iframe");
    if (!target) return;

    // aタグ
    if (target.tagName === "A" && target.href) {
      gtag("event", "click_link", {
        event_category: "interaction",
        event_label: target.href,
        value: 1
      });
    }

    // 画像クリック
    if (target.tagName === "IMG") {
      gtag("event", "click_image", {
        event_category: "gallery",
        event_label: target.src,
        value: 1
      });
    }

    // 動画クリック or 再生
    if (target.tagName === "VIDEO" || target.tagName === "IFRAME") {
      gtag("event", "play_video", {
        event_category: "media",
        event_label: target.currentSrc || target.src || target.title,
        value: 1
      });
    }
  });
</script>


  </body>
</html>
