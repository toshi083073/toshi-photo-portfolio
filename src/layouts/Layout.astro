---
const title = Astro.props.title || "Toshi Kuramochi Photography";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- ✅ Google Fonts: Inter + Noto Sans JP -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Noto+Sans+JP:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --font-sans: "Inter", "Noto Sans JP", system-ui, -apple-system, sans-serif;
        --bg: #111;
        --text: #ddd;
        --text-dim: #999;
        --accent: #fff;
      }

      html, body {
        font-family: var(--font-sans);
        margin: 0;
        padding: 0;
        color: var(--text);
        background: var(--bg);
        line-height: 1.7;
        letter-spacing: 0.02em;
        -webkit-font-smoothing: antialiased;
      }

      h1, h2, h3 {
        font-weight: 600;
        letter-spacing: 0.04em;
        color: var(--accent);
        margin-top: 0;
        margin-bottom: 1rem;
      }

      a {
        text-decoration: none;
        color: inherit;
        transition: opacity .2s ease;
      }

      a:hover {
        opacity: 0.7;
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
      }

      .nav a {
        color: var(--text-dim);
        font-size: 0.95rem;
        margin-right: 1rem;
      }

      footer {
        color: var(--text-dim);
        font-size: 0.85rem;
        margin-top: 4rem;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <slot />
      <footer>© {new Date().getFullYear()} Toshi Kuramochi · Built with Astro</footer>
    </div>
  </body>
</html>
