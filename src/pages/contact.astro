---
const BASE = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact — Toshi Kuramochi Photography</title>
  </head>

  <body style="background:#000; color:#f0f0f0; font-family:'Inter',sans-serif; text-align:center; padding:4rem 1rem;">
    <h1 style="color:#d7b354;">Contact</h1>
    <p style="max-width:600px; margin:1rem auto 3rem; line-height:1.8;">
      Under preparation.<br />
      Please contact me via
      <a href="https://www.instagram.com/toshi30aug/"
         target="_blank"
         rel="noopener"
         style="color:#d7b354; text-decoration:none;">
        Instagram DM
      </a>.
    </p>

    <!-- ✅ GitHub Pages対応済み（BASE使用） -->
    <a href={BASE}
       style="display:inline-block; color:#d7b354; border:1px solid #d7b354;
              padding:0.6rem 1.4rem; border-radius:6px; text-decoration:none; transition:all .2s;">
      ← Back to Home
    </a>

    <footer style="margin-top:4rem; opacity:.7; font-size:.9rem;">
      © {new Date().getFullYear()} Toshi Kuramochi
    </footer>
  </body>
</html>
